<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.verifonevx990app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".vxUtils.VerifoneApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/VxAppThemeNoActionBar"
        tools:targetApi="q">
        <activity android:name=".preAuth.PendingPreauthActivity"></activity>
        <activity
            android:name=".utils.printerUtils.PrinterActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"></activity>
        <activity
            android:name=".main.MainActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".transactions.TransactionActivity"
            android:theme="@style/VxAppThemeNoActionBar"
            android:windowSoftInputMode="adjustNothing">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".emv.transactionprocess.VFTransactionActivity"
            android:theme="@style/VxAppThemeNoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".emv.transactionprocess.CustomPinActivityUpdate"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".nontransaction.EmiActivity" />

        <receiver android:name=".main.AutoSettleReceiver">
            <intent-filter>
                <action android:name="com.bonushub.vxPos.force_settle" />
            </intent-filter>
        </receiver>
    </application>

</manifest>